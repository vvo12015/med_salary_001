                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="year" type="INT"/>
            <column name="month" type="INT"/>
            <column name="record_kind" type="VARCHAR(255)"/>
            <column name="record_id" type="VARCHAR(255)"/>
            <column name="creation_date" type="TIMESTAMP"/>
            <column name="executor_user_position" type="VARCHAR(255)"/>
            <column name="executor_name" type="VARCHAR(255)"/>
            <column name="provider_place" type="VARCHAR(255)"/>
            <column name="referral_kind" type="VARCHAR(255)"/>
            <column name="edrpou" type="VARCHAR(255)"/>
            <column name="referring_user_position" type="VARCHAR(255)"/>
            <column name="episode_id" type="VARCHAR(255)"/>
            <column name="episode_kind" type="VARCHAR(255)"/>
            <column name="episode_start_date" type="TIMESTAMP"/>
            <column name="period_start_date" type="TIMESTAMP"/>
            <column name="period_end_date" type="TIMESTAMP"/>
            <column name="period_lenght" type="INT"/>
            <column name="main_diagnosis" type="VARCHAR(255)"/>
            <column name="main_diagnosis_validation_status" type="VARCHAR(255)"/>
            <column name="main_diagnosis_clinical_status" type="VARCHAR(255)"/>
            <column name="additional_diagnosis" type="VARCHAR(255)"/>
            <column name="refuted_error_additional_diagnosis" type="VARCHAR(255)"/>
            <column name="service_list" type="VARCHAR(255)"/>
            <column name="interaction_class" type="VARCHAR(255)"/><!--клас взаємодії-->
            <column name="priority" type="VARCHAR(255)"/>
            <column name="interaction_kind" type="VARCHAR(255)"/><!--тип взаємодії-->
            <column name="grounds_hospitalization" type="VARCHAR(255)"/><!--підстава госпіталізації-->
            <column name="result_treatment" type="VARCHAR(255)"/><!--результат лікування-->
            <column name="patient_id" type="VARCHAR(255)"/>
            <column name="presence_declaration" type="BOOLEAN"/><!--наявність декларації-->
            <column name="patient_sex" type="VARCHAR(255)"/>
            <column name="patient_weight" type="FLOAT"/>
