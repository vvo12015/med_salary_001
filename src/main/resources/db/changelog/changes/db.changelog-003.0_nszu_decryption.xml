            <column name="patient_age_years" type="INT"/>
            <column name="adsg" type="VARCHAR(255)"/>
            <column name="service_package" type="VARCHAR(255)"/>
            <column name="service_package_number" type="VARCHAR(255)"/>
            <column name="tariff_uah" type="FLOAT"/>
            <column name="payment_fact" type="VARCHAR(255)"/>
            <column name="statistic_status" type="BOOLEAN"/>
            <column name="report_status" type="BOOLEAN"/>
            <column name="error_comment" type="VARCHAR(255)"/>
            <column name="error_details" type="VARCHAR(255)"/>
            <column name="details_require_verification" type="VARCHAR(255)"/>
            <column name="group_error_details" type="VARCHAR(255)"/>
            <column name="details_preview_nszu" type="VARCHAR(255)"/>
            <column name="additional_comment" type="VARCHAR(255)"/>
            <column name="date_preview_nszu" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
    <changeSet id="29" author="vvo12015">
        <modifyDataType tableName="nszu_decryption" columnName="presence_declaration" newDataType="BIT"/>
        <modifyDataType tableName="nszu_decryption" columnName="statistic_status" newDataType="BIT"/>
        <modifyDataType tableName="nszu_decryption" columnName="report_status" newDataType="BIT"/>
    </changeSet>
</databaseChangeLog>